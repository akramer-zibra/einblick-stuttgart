{
  "name": "einblick-stuttgart",
  "version": "0.0.1",
  "description": "Diese Software soll mehr Einblick in die politische Arbeit der Stadt Stuttgart ermöglichen",
  "main": "src/index.ts",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "doc:generate:uml": "puml generate doc/plantuml/datenmodell.puml -o doc/plantuml/datenmodell.png",
    "client:build": "parcel build src/Client/index.html --out-dir ./public",
    "client:build:debug": "parcel build src/Client/index.html --out-dir ./public --no-minify",
    "client:build:watch": "parcel watch src/Client/index.html --out-dir ./public ",
    "start": "npm run client:build && npm run server:start",
    "server:start": "npm run server:build:live",
    "server:build": "tsc -p .",
    "server:build:live": "nodemon --watch 'src/**/*.ts' --exec node_modules/.bin/ts-node src/Server/index.ts",
    "server:check": "tsc --noEmit",
    "server:lint": "tslint --project tsconfig.json",
    "server:verify": "npm run server:check && npm run server:lint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Stuttgart",
    "API",
    "Open Governence",
    "Bürgerbeteiligung"
  ],
  "dependencies": {
    "axios": "0.19.0",
    "cheerio": "1.0.0-rc.3",
    "date-and-time": "0.10.0",
    "graphql-yoga": "1.18.3",
    "iconv-lite": "0.5.0",
    "nodemon": "1.19.4",
    "query-string": "6.8.3",
    "ts-node": "8.4.1",
    "typescript": "3.4.5"
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/cheerio": "0.22.7",
    "@types/node": "12.11.6",
    "node-plantuml": "0.9.0",
    "parcel-bundler": "1.12.4",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0"
  },
  "author": "Achim Kramer <achim@zibra.de>",
  "license": "AGPL-3.0-only",
  "private": true
}
